<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="계산기"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_margin="10dp"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:inputType="number"
        android:layout_margin="10dp"
        android:textSize="40dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="7"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="8"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="9"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btnD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#b2ebf2"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="4"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="5"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="6"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btnM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#b2ebf2"
                android:layout_weight="1"
                android:text="×"
                android:textSize="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="1"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="2"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="3"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btnS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#b2ebf2"
                android:layout_weight="1"
                android:text="-"
                android:textSize="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#dcedc8"
                android:layout_weight="1"
                android:text="C"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff9c4"
                android:layout_weight="1"
                android:text="0"
                android:textSize="35dp" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#dcedc8"
                android:layout_weight="1"
                android:text="="
                android:textSize="35dp" />

            <Button
                android:id="@+id/btnA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#b2ebf2"
                android:layout_weight="1"
                android:text="+"
                android:textSize="35dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>